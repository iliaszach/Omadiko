                    @if (Model.HasPassword)
                    {
                        @Html.ActionLink("Change your password:", "ChangePassword")
                    }
                    else
                    {
                        @Html.ActionLink("Create your Password", "SetPassword")
                    }
                </p>
            </div>
            <div class="t-center light mb-20">
                <p>
                    @if (Model.PhoneNumber is null)
                    {
                        @Html.ActionLink("Add Phone number", "AddPhoneNumber")
                    }
                    else
                    {
                        @Html.ActionLink("Reset Phone number", "RemovePhoneNumber")
                    }
                </p>
            </div>
            <div class="t-center light mb-20">
                <p>
                    @if (Model.PhotoUrl is null)
                    {
                        @Html.ActionLink("Add profile picture", "")
