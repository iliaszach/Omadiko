@model Omadiko.WebApp.Models.SetPasswordViewModel
@{
    ViewBag.Title = "Create Password";
}

<section id="fullscreen" class="background49Neo sdark-bg fullscreen table no-margin">
    <div class="login white v-center t-center">
        <p class="mb-25 white op-08">
            You do not have a local username/password for this site. Add a local
            account so you can log in without an external login.
        </p>

        @using (Html.BeginForm("SetPassword", "Manage", FormMethod.Post, new { @class = "form login_type t-center pl-10 pr-10 mini-text", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <h1 class="t-center light mb-20">Create Local Login</h1>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.NewPassword, new { @class = "hidden" })
                @Html.PasswordFor(m => m.NewPassword, new { @class = "strip_form white light block fullwidth op-07", placeholder = "New Password" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "hidden" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "strip_form white light block fullwidth op-07", placeholder = "Confirm new Password" })
            </div>
            <div class="form-group"> 
                <input type="submit" value="Set password" class="strip_button white light block fullwidth mt-30 colored-bg pt-18" />                
            </div>
        }
    </div>

</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
