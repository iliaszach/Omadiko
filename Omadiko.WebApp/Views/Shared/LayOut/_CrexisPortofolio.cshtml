<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title>Crexis Multipurpose One/Multi Page HTML Theme</title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
    <!--Favicon -->
    <link rel="icon" type="image/png" href="images/favicon.png" />

    <!-- CSS Files + Page Styles -->
    @Styles.Render("~/Content/CrexisCss")

    <!-- Page Layout Color, night or dark -->
    <link id="changeable_tone" rel="stylesheet" href="~/Content/css/page_tones/dark.css" />
    <!-- End Page Layout Color -->
    <!-- Page Elements Color -->
    <link id="changeable_color" rel="stylesheet" href="~/Content/css/colors/red.css" />
    <!-- End Page Elements Color -->
    <!-- Page Fonts / Pacifico-->
    <link href='http://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
    <!-- Raleway-->
    <link href='http://fonts.googleapis.com/css?family=Raleway:400,100,,200,300,600,700' rel='stylesheet' type='text/css'>

    <!-- End CSS Files -->

    <style>
        body {
            background-color: #222222;
        }
        /*CssForModal*/


        /* The Modal (background) */
        .modal {
            display: none; /* Hidden by default */
            position: fixed; /* Stay in place */
            z-index: 1; /* Sit on top */
            padding-top: 100px; /* Location of the box */
            left: 0;
            top: 0;
            width: 100%; /* Full width */
            height: 100%; /* Full height */
            overflow: auto; /* Enable scroll if needed */
            background-color: rgb(0,0,0); /* Fallback color */
            background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
        }

        /* Modal Content */
        .modal-content {
            background-color: #222222;
            color:#ffff;
            margin: auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
        }

        /* The Close Button */
        .close {
            color: #FF0000;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

            .close:hover,
            .close:focus {
                color:white;
                text-decoration: none;
                cursor: pointer;
            }
    </style>

</head>


<!-- Body Start -->
<body class="parallax">


    <!-- Social Media -->
    @Html.Partial("Navbar/_SocialMedia")
    <!-- End Social Media -->
    <!-- Navigation - select your nav color - dark-nav or white-nav -->
    @Html.Partial("Navbar/_CrexisNavbar")
    <!-- End Nav -->
    <!-- Page Header - litle-header or bigger-header - soft-header, dark-header or background -->
    @Html.Partial("Navbar/_PageHeader")
    <!-- End #page-header -->

    @RenderBody();




    <!--FOOTER-->
    @Html.Partial("Footer/_CrexisFooter")
    <!--END FOOTER-->
    <!-- JS Files -->
    @Scripts.Render("~/bundles/lib")
    @RenderSection("ProviderJavascript", required: false)
    @RenderSection("scripts", required: false)
    <!--END JS Files -->



</body>
<!-- Body End -->
</html>
