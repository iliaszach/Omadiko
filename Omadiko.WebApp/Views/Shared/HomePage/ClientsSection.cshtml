@model Omadiko.WebApp.Models.MarbleProviderViewModel.MarbleProviderVM

<style>

    .box-header {
        font-family: Georgia, Times, 'Times New Roman', serif !important;
    }

</style>

<!-- Clients Section -->
<section id="clients" class="background41 parallax6 xdark-bg" style="background-color:red;">

    <!-- Inner -->
    <div class="inner t-center clearfix">
        <!-- Header -->
        <h1 class="header strip header-style-1 white oswald t-center uppercase animated head georgia" data-animation="fadeIn" data-animation-delay="100">
            @*What Clients Says?*@
            Our Best Providers
        </h1>
        <!-- Header Text -->
        <p class="normal t-center antialiased animated" data-animation="fadeIn" data-animation-delay="100">
           
        </p>

        <div class="boxes boxes-type-4 light box-carousel three-items clearfix animated" data-animation="fadeIn" data-animation-delay="500">

            @foreach (var provider in Model.Providers)
            {
                <!-- Box -->
                <div class="box white oswald antialiased normal" style="width:100%; height:300.2px;">
                    <!-- Box Image -->
                    <div class="box-image fullwidth t-center normal">
                        <!-- Image -->
                        <a href="~/provider/details/@provider.ProviderId" class="changeable-image">
                            <img src="@Url.Content(provider.CompanyPhoto)" style="vertical-align: text-bottom; width: 100%; height: 100%; border-radius: 100%;" />
                        </a>
                    </div>
                    <!-- End Box Icon -->
                    <!-- Box Header -->
                    <h4 class="box-header no-padding uppercase" style="width:360px; height:36.8px;">
                        @Html.DisplayFor(modelItem => provider.CompanyTitle)
                    </h4>
                    <!-- Position -->
                    <h5 class="colored raleway">
                        @Html.DisplayFor(modelItem => provider.Location.Country)
                    </h5>
                    <!-- Box Description -->
                    <p class="no-padding no-margin raleway">
                        @Html.DisplayFor(modelItem => provider.CompanyDescription)
                    </p>
                </div>
            }
            <!-- End Box -->
        </div>
        <!-- End Boxes -->
    </div>
    <!-- End Inner -->
</section>
<!-- End Clients -->
